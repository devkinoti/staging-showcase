<div class = "row">
	<div class = "store_logo">
		<%= image_tag "mini_logo.png" %>
	</div>
</div>

<div class = "row">
	<div class = "col-lg-3 col-sm-4">
		<div class = "panel panel-default cart">
			<div class = 'panel-heading'>Customer's Cart</div>
			<div class="panel-body">
				<%= hidden_div_if(@cart.line_items.empty?,id: 'cart') do %>
				   <%= render @cart %>
			    <%end%>
			</div>
		</div>
	</div>


	<div class = "col-lg-9 col-sm-8">
		<% @products.each do |product| %>
		<div class = "col-lg-3 col-md-4">
			<div class ="thumbnail">
				<%= image_tag "320.png" %>
				<div class = "caption">
					<h4><%= product.name %></h4>
					<span><small>Quantity: <%= product.quantity %></small></span>
					<% if product.quantity == 0 %>
					<ul class = "list-group">
						<li class = "list-group-item">
							<span class = "badge"><span class = "glyphicon glyphicon-exclamation-sign"></span></span>
							Out of Stock
						</li>
					</ul>
					<%else%>
					<h4 class = "pull-right"><%= number_to_currency(product.shop_price,:precision => 0,:unit => "Ksh",:format => "%u %n") %></h4>
					<p><%= button_to "Add to cart",line_items_path(product_id: product),remote: true,class: "btn btn-success" %></p>
					<%end%>
				</div>
			</div>
		</div>
		<%end%>
	</div>
</div>

