<div class = "logo">
  <%= image_tag "mini_logo.png" %>
</div>

<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class = "form-group">
      <div class="input-group">
        <%= f.email_field :email, class: 'form-control input-lg', placeholder: 'Email' %>
        <span class="input-group-addon"><span class ="glyphicon glyphicon-user"></span>
      </div>
    </div>

    <div class = "form-group">
      <div class="input-group">
        <%= f.password_field :password, class: 'form-control input-lg', placeholder: 'Password' %>
        <span class="input-group-addon"><span class = "glyphicon glyphicon-lock"></span>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group"><%= f.check_box :remember_me %> &nbsp; <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", class: 'btn btn-primary btn-block btn-lg' %></div>
  <% end %>

  <div class = "shared_links">
    <%= render "devise/shared/links" %>
  </div>
</div>

<footer>
  <p>Superior base services LTD 2015-2016</p>
</footer>
