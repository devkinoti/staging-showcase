<div class = "container">
<h1 class = "products_header">Inventory Listing</h1>
<p><%= link_to 'Create New Product', new_product_path,class: "btn btn-success" %></p>

<div class="row">
  <div class="col-lg-12 col-sm-8">
    <%= search_form_for @search do |f| %>   
    <div class="form-group">
      <%= f.label :name_cont, "Search for product" %>
      <%= f.search_field :name_cont , placeholder: "Enter product name to search", class: "form-control input-lg" %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-default btn-lg" %>
    </div>
    <%end%>
  </div>
</div>

<div class="table-responsive">
<table class = "table table-hover table-striped">
<thead>
  <tr>
    <th>Name</th>
    <th>Product Type</th>
    <th>Units of measure</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Total Purchase cost</th>
    <th>Shop Price</th>
    <th>Purchase Date</th>
    <th>Details</th>
    <th>Update</th>
  </tr>
</thead>

<tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.product_type %></td>
      <td><%= product.units %></td>
      <td><%= product.quantity %></td>
      <td><%= number_to_currency(product.purchase_price,:precision => 2,:unit => "Ksh",:format => "%u %n") %></td>
      <td><%= number_to_currency(product.total_price,:precision => 2,:unit => "Ksh",:format => "%u %n") %></td>
      <td><%= number_to_currency(product.shop_price,:precision => 2,:unit => "Ksh",:format => "%u %n") %></td>
      <td><%= product.created_at.strftime("%d-%b-%Y %H:%M")%></td>
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
    </tr>


  <% end %>
</tbody>
</table>
</div>

<%= will_paginate @products,renderer: BootstrapPagination::Rails %>



