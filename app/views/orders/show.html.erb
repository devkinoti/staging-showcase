<div class = "container">
	<p class = "order_store_btns">
		<%= link_to 'Return to SBS Shop', store_path, class: "btn btn-default" %> 
		<%= link_to 'View All the orders', orders_path ,class: "btn btn-default" %></p>
<h3> Order #<%= @order.id %></h3>
<table class = "table table-hover table-striped">
	<thead>
		<tr>
			<th> Product Name</th>
			<th> Quantity sold </th>
			<th> Product Shop Price</th>
			<%= admins_only do %>
			<th> Product Purchase Price</th>
			<%end%>
			<th> Order Total </th>
			<%= admins_only do %>
			<th> Profit </th>
			<%end%>
			<th> Order Status </th>
		</tr>
	</thead>

	<tbody>
		<% @order.line_items.each do |item| %>
		<tr>
			<td><%= item.product.name %></td>
			<td><%= item.quantity %></td>
			<td><%= number_to_currency(item.product.shop_price,:precision => 2,:unit => "Ksh",:format => "%u %n") %></td> 
			<%= admins_only do %>
			<td><%= number_to_currency(item.product.purchase_price,:precision => 2,:unit => "Ksh",:format => "%u %n") %></td>
			<%end%>
			<td><%= number_to_currency(item.total_price,:precision => 2,:unit => "Ksh",:format => "%u %n") %></td>
			<%= admins_only do %>
			<td><%= number_to_currency(item.total_price - (item.product.purchase_price * item.quantity),:precision => 2,:unit => "Ksh",:format => "%u %n")%></td>
			<%end%>
			<td><% if @order.paid %> 
				<strong><p id = "paid">Paid</p></strong>
				<%else%>
				<strong><p id = "not_paid">Not Paid</p></strong>
				<%end%>
			</td>
		</tr>
		<%end%>
	</tbody>
</table>

<div class = "panel panel-default">
	<div class = "panel-heading">
		<h3 class = "panel-title">Due Customer's Change</h3>
	</div>
	<div class = "panel-body">
		<h4>Cash Paid by customer <strong><%= number_to_currency(@order.cash_paid ,:precision => 2,:unit => "Ksh",:format => "%u %n") %></strong></h4> <p><%=  @order.created_at.strftime("%d-%b-%Y %H:%M") %></p>
		<h4 class = "order_change">Amount of change due <strong><%= number_to_currency((@order_change = @order.cash_paid - @order.order_price),:precision => 2,:unit => "Ksh",:format => "%u %n")%></strong></h4>
	</div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Income From Shop</h3>
  </div>
  <div class="panel-body">
    <h4><%= number_to_currency(@order.order_price ,:precision => 2,:unit => "Ksh",:format => "%u %n") %></h4>
  </div>
</div>



<p><%= link_to "Printable Receipt (PDF)",order_path(@order,:format => "pdf"),class: "btn btn-lg btn-primary" %></p>


</div>
