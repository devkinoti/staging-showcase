<div class = "container">
<h1>Editing order</h1>
<h3> Order #<%= @order.id %></h3>
<table class = "table table-hover table-striped">
	<thead>
		<tr>
			<th> Product Name</th>
			<th> Quantity sold </th>
			<th> Product Shop Price</th>
			<th> Order Total </th>
			<th> Order Status </th>
		</tr>
	</thead>

	<tbody>
		<% @order.line_items.each do |item| %>
		<tr>
			<td><%= item.product.name %></td>
			<td><%= item.quantity %></td>
			<td><%= number_to_currency(item.product.shop_price,:precision => 0,:unit => "Ksh",:format => "%u %n") %></td>
			<td><%= number_to_currency(item.total_price,:precision => 0,:unit => "Ksh",:format => "%u %n") %></td>
			<td><% if @order.paid %> 
				<strong><p id = "paid">Paid</p></strong>
				<%else%>
				<strong><p id = "not_paid">Not Paid</p></strong>
				<%end%>
			</td>
		</tr>
		<%end%>
	</tbody>
</table>

<div class = "orderform-width">
  <%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
  <div class = "alert alert-danger">
      <p><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</p>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "form-group">
    <%= f.label :Cash_Paid %>
    <%= f.text_field :cash_paid, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.check_box :paid %>
    <%= f.label :paid %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to 'Show', @order %> |
<%= link_to 'Back', orders_path %>
</div>