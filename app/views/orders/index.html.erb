<h1>Shop Orders</h1>

<table class = "table table-hover table-striped">
  <thead>
    <tr>
      <th>Order id</th>
      <th>Paid Status</th>
      <th>Time Of order</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>Order #<%= order.id %></td>
        <td>
          <% if order.paid %>
          <strong><p id = "paid">Paid</p></strong>
          <%else%>
          <strong><p id = "not_paid">Not Paid</p></strong>
          <%end%>
        </td>
        <td>
          <%= order.created_at.strftime("%d-%b-%Y %H:%M") %>
        </td>
        <td>
          <% order.line_items.each do |item| %>
          <%= number_to_currency(item.total_price,:precision => 0,:unit => "KES",:format => "%u %n") %>
          <%end%>
        </td>


        <%= admins_only do %>
        <td><%= link_to 'View Order Details', order %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Return to SBS Shop', store_path %>
