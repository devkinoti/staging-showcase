<h1>Sales </h1>

<table class = "table table-hover table-striped">
  <thead>
    <tr>
      <th>Order id</th>
      <th>Paid Status</th>
      <th>Time Of order</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>Order #<%= order.id %></td>
        <td>
          <% if order.paid %>
          <strong><p id = "paid">Paid</p></strong>
          <%else%>
          <strong><p id = "not_paid">Not Paid</p></strong>
          <%end%>
        </td>
        <td>
          <%= order.created_at.strftime("%d-%b-%Y %H:%M") %>
        </td>
        <td>
          <%= number_to_currency(order.order_price ,:precision => 2,:unit => "KES",:format => "%u %n") %>
        </td>



      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @orders,renderer: BootstrapPagination::Rails %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Income From Shop</h3>
  </div>
  <div class="panel-body">
    <h4><%= number_to_currency(@total_orders,:precision => 2,:unit => "Ksh",:format => "%u %n") %></h4>
  </div>
</div>