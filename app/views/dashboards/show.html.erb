<div class = "dashboard_wrapper">
<header>
	<div class = "user_name">
		<h2>Welcome <%= current_user.first_name %></h2>
		<p>Signed in as <strong><%= current_user.email %></strong></p>
    </div>
</header>
</div>


<% if user_signed_in? %>
<div class = "options">
	<div class = "inventory_tab">
		<%= image_tag "ib.png" %>
		<p><%= link_to "Add items to Inventory",products_path %></p>
	</div>

	<div class = "sales_tab">
		<%= image_tag "sales.png"%>
		<p><%= link_to "View all orders",orders_path %></p>
	</div>
<%end%>
</div>



